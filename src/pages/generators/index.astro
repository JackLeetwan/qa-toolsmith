---
import PublicLayout from "../../layouts/PublicLayout.astro";
import GeneratorsList from "../../components/generators/GeneratorsList";
import { isFeatureEnabled } from "../../features";

export const prerender = false;

// Check if generators feature is enabled
if (!isFeatureEnabled("collections.generators")) {
  return Astro.redirect("/", 302);
}
---

<PublicLayout
  title="Generators Hub"
  description="Quick access to test data generators and validators. Generate synthetic data for testing with country-specific formats."
>
  <GeneratorsList client:load />
</PublicLayout>
