---
import Welcome from "../components/Welcome.astro";
import PublicLayout from "../layouts/PublicLayout.astro";

// Get user from Astro.locals (set by middleware)
// Gracefully handle missing user data
const user = Astro.locals.user;
---

<PublicLayout
  title="QA Toolsmith"
  description="Standardizuj codzienną pracę testerów z naszymi narzędziami"
  user={user}
>
  <Welcome user={user} />
</PublicLayout>
