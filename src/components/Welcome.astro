---
// src/components/Welcome.astro
import HeroSection from "./landing/HeroSection";
import FeatureGrid from "./landing/FeatureGrid";
import BenefitsSection from "./landing/BenefitsSection";
import CallToAction from "./landing/CallToAction";

const { user } = Astro.props;
---

<div class="w-full mx-auto">
  <div
    class="relative max-w-6xl mx-auto rounded-2xl shadow-lg p-6 md:p-8 border bg-card text-card-foreground"
  >
    <div class="space-y-16">
      <HeroSection client:load />
      <div class="text-center">
        <h2 class="text-2xl md:text-3xl font-semibold text-primary">Główne funkcje</h2>
      </div>
      <FeatureGrid client:load />
      
      <!-- Visual separator between FeatureGrid and BenefitsSection -->
      <div class="relative flex items-center justify-center py-8" role="separator" aria-label="Separator sekcji">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-primary/30"></div>
        </div>
        <div class="relative bg-card px-4">
          <div class="w-2 h-2 bg-primary/40 rounded-full"></div>
        </div>
      </div>
      
      <BenefitsSection client:load />
      {!user && (
        <div class="!mt-8">
          <CallToAction client:load />
        </div>
      )}
    </div>
  </div>
</div>
