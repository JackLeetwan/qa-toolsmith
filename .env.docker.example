# Environment variables for Docker deployment
# Copy this file to .env and fill in your actual values

# Required: Your cloud Supabase credentials (NOT localhost!)
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-anon-key-here

# Optional: Service role key for admin operations
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Required: Environment name for feature flags
# Use "local" for local development, "integration" for staging, "production" for production
ENV_NAME=local

# Optional: AI integration
OPENROUTER_API_KEY=your-openrouter-key-here

# Optional: Auth redirect URLs
AUTH_RESET_REDIRECT_URL=https://qa-toolsmith.pages.dev/auth/reset/confirm
AUTH_SIGNUP_REDIRECT_URL=https://qa-toolsmith.pages.dev

